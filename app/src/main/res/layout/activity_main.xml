<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14DEFF"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="Jaka kawusia wariacie?"
        android:textColor="@color/black"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/kawa_radiogroup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/cappuccino_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappuccino"
                />

            <RadioButton
                android:id="@+id/espresso_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espresso"
                />

            <RadioButton
                android:id="@+id/latte_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latte"
                />

        </RadioGroup>

        <ImageView
            android:id="@+id/kawa_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:contentDescription="cappuccino"
            android:src="@drawable/capuccino"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14DEFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="Jakie dodatki wariacie?"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/mleko_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mleko"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"

            />

        <CheckBox
            android:id="@+id/cukier_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cukier"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</LinearLayout>